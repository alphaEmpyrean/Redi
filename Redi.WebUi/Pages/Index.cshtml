@page
@model IndexModel
@{
    ViewData["Title"] = "Admin Home";
}

<h1>Admin Home</h1>
<hr />
<h2>Record Profit</h2>
<div>    
    <form method="post" asp-page-handler="CreateProfit">
        <div class="form-group row mt-1">
            <label class="col-form-label col-1" asp-for="CreateDailyProfitRequest.Date">Date</label>
            <div class="col-4">
                <input class="form-control" type="date" asp-for="CreateDailyProfitRequest.Date" />
            </div>            
        </div>
        <div class="form-group row mt-1">
            <label class="col-form-label col-1" asp-for="CreateDailyProfitRequest.Profit">Profit</label>
            <div class="col-4">
                <input class="form-control" asp-for="CreateDailyProfitRequest.Profit" placeholder="XXXX.XX" />
            </div>            
        </div>
        <button class="btn btn-success mt-2" type="submit">Record</button>
    </form>
</div>
<hr />
<h2>Profits</h2>
<div class="w-50">
    <table class="table">
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Profit</th>
        </tr>
        @foreach (var companyProfit in Model.DailyCompanyProfits)
        {
            <tr>
                <th scope="row">@companyProfit.Date</th>
                <td>@companyProfit.Profit.Value.ToString("C")</td>
            </tr>
        }
    </table>
</div>